{
  "name": "@nexustech/logger",
  "version": "1.0.1",
  "description": "Simple logger tool to send messages to the console at set levels",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "rm -rf dist && ts-node build.ts && npm run build:types && npm run build:index",
    "build:types": "tsc --declaration --declarationDir dist/types --emitDeclarationOnly",
    "build:index": "cp ./src/public/* ./dist",
    "verify": "tsc --noEmit",
    "test": "LOG_LEVEL=trace jest --config ./jest.config.ts",
    "test:watch": "LOG_LEVEL=trace jest --config ./jest.config.ts --watch-all",
    "lint": "eslint './src/**/*.ts'",
    "lint:fix": "eslint './src/**/*.ts' --fix",
    "lint-staged": "lint-staged ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nexus-technolgy/logger"
  },
  "keywords": [
    "logger"
  ],
  "author": "Daniel Bryar",
  "license": "Apache-2.0",
  "devDependencies": {
    "@commitlint/config-conventional": "^16.2.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/gitlab": "^9.5.0",
    "@semantic-release/npm": "^10.0.5",
    "@swc/helpers": "^0.5.1",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.5.1",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "babel-eslint": "10.1.0",
    "commitlint": "^17.7.1",
    "esbuild": "^0.19.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-check-file": "^1.3.1",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^26.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "jest": "^29.6.3",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "semantic-release": "^21.0.9",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.5.5"
  }
}
