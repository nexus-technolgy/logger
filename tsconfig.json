{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "pretty": true,
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "target": "ES2022",
    "types": ["node", "jest"]
  },
  "include": ["src"],
  "exclude": ["**/*.spec.*", "**/*.test.*", "**/tests/*", "**/*.mock.*", "**/mocks/*"]
}
